if [ `uname` = 'Darwin' ]; then
  alias ls='ls -G'
  alias du='du -k -d 1 $argv'
else
  alias ls='ls --color=auto'
  alias du='du -k --max-depth=1 $argv'
fi

cd() {
  builtin cd "$@" && ls
}

alias l='ls'
alias ll='ls -lh'
alias la='ls -a'
alias lal='ls -lah'

alias sub='subl -n'

alias b='bundle exec'
alias bl='bundle --local'
alias r='bundle exec rake'

alias df='df -kh $argv'
alias tigs='tig status $argv'

alias less='less -R'
